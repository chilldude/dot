# Gaps config
# default
smart_gaps on
gaps inner 4

# Enable gaps
bindsym $mod+g gaps inner all set 4

# Disable gaps
bindsym $mod+shift+g gaps inner all set 0

# Lock screen
bindsym $mod+Escape exec i3lock

# Enable compton for fading effects
exec compton --config ~/.compton.conf -b

